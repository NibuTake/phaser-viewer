{
  "name": "phaser-viewer",
  "version": "0.1.1",
  "description": "A Storybook-like development environment for Phaser 3 components with interactive testing",
  "keywords": [
    "phaser",
    "storybook",
    "testing",
    "game-development",
    "ui-components"
  ],
  "author": "NibuTake <takeshi715tech@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NibuTake/phaser-viewer.git"
  },
  "homepage": "https://github.com/NibuTake/phaser-viewer",
  "bugs": {
    "url": "https://github.com/NibuTake/phaser-viewer/issues"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "phaser-viewer": "bin/phaser-viewer.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./utils/storybookExpect": {
      "types": "./dist/utils/storybookExpect.d.ts",
      "import": "./dist/utils/storybookExpect.js",
      "require": "./dist/utils/storybookExpect.js"
    }
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "tsc --project tsconfig.lib.json && vite build --mode lib",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:cli": "vitest run tests/cli",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build:lib"
  },
  "dependencies": {
    "@types/node": "^24.1.0",
    "@vitejs/plugin-react": "^4.6.0",
    "esbuild": "^0.24.0",
    "glob": "^11.0.0",
    "phaser": "^3.90.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-jsx": "^5.1.7",
    "tsx": "^4.19.2",
    "vite": "^7.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
